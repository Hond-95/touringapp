<!DOCTYPE html>
<html>
  <head>
    <title>Touringapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="flash alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="flash alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% else %>
    <% end %>
    <header>
      <%= render 'layouts/header' %>
    </header>
    <%= yield %>
  </body>
</html>
