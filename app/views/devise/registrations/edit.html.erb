<div class="container">
  <div class="col-sm-6 col-sm-offset-3 center form-square">
    <h2>アカウント編集</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :avatar %>
      </div>
      <br>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <br>
        <i>(空欄の場合は変更されません)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= f.label "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <br>
      <div class="field">
        <%= f.label "現在のパスワード" %>
        <br>
        <i>(変更を反映するには現在のパスワードを入力してください)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <br>
    <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "削除してよろしいですか？" }, method: :delete, class: "btn btn-danger" %>
    <br>
    <%= link_to "戻る", :back %>
  </div>
</div>
